{% extends "base.html.twig" %}

{% block title %}User informations{% endblock %}

{% block body %}
    <h2>All users</h2>
    <a href={{ path('new_user') }} class="btn btn-primary">New User</a>

    <table class="table">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Job</th>
            <th>-</th>
            <th>-</th>
        </thead>
        {% for user in users %}
            <tr>
                <td>{{ user.Id }}</td>
                <td>{{ user.Name }}</td>
                <td>{{ user.Age }}</td>
                <td>{{ user.Job }}</td>
                <td><a href={{ path('delete', {'id': user.Id}) }} class="btn btn-danger">Delete</a></td>
                <td><a href={{ path('modify', {'id': user.Id} ) }} class="btn btn-warning">Modify</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}